---
import SiteLogo from './SiteLogo.astro';

interface Nav {
  url: string;
  name: string;
}

interface Website {
  nav: Nav[];
}

import site from '../data/site.json';
const { website }: { website: Website } = site;
---

<header>
  <nav class="navbar">
    <SiteLogo />
    <ul class="nav-links shadow">
      {
        website.nav.map(({ name, url }) => (
          <li class="nav-item">
            <a
              aria-current={Astro.url.pathname === url}
              class:list={[
                'link',
                {
                  active:
                    Astro.url.pathname === url ||
                    (url !== '/' && Astro.url.pathname.startsWith(url)),
                },
              ]}
              href={url}
            >
              {name}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<style>
  .navbar {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    padding: 1em;
    gap: 0.5em;
    width: 90%;
    max-width: 1100px;
    margin-inline: auto;
  }

  .nav-links {
    display: flex;
    list-style: none;
    padding: 0;
    background: var(--light);
  }

  .link {
    color: var(--black);
    padding: 0.25rem 0.5rem;
    font-weight: 700;
    text-decoration: none;
    font-size: 1.25rem;
    font-size: clamp(
      1.25rem,
      1.0294117647058822rem + 0.9411764705882352vw,
      1.5rem
    );
    border-block: 4px solid transparent;
    transition: all 0.2s ease-in-out;
    display: inline-block;
  }

  .link:hover {
    border-block: 4px solid var(--primary);
    color: var(--primary);
  }

  .active {
    color: var(--light);
    background-color: var(--dark);
    border-block-end: 4px solid var(--primary);
  }

  /* @media (max-width: 500px) {
