---
interface Props {
  space: string;
  recursive: boolean;
}

const { space } = Astro.props;
---

<div class="stack">
  <slot />
</div>

<style define:vars={{ space }}>
  .stack {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .stack > * {
    margin-block: 0;
  }

  .stack > * + * {
    margin-block-start: var(--space, 1.5rem);
  }
</style>
